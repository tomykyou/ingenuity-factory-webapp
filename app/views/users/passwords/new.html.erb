<div class="main_zone">
  <nav id="menuber_top">
    <ul>
      <%if current_user==nil%> 
        <li><%= link_to "新機登録", new_registration_path(resource_name) %><br /></li>
        <li><%= link_to "ログイン", new_session_path(resource_name) %><br /></li>
      <%else%>
        <li><%= link_to "マイページ", mainnnote_mypage_path %></li>
        <li><%= link_to "ログアウト", destroy_user_session_path, method: :get %></li>
      <%end%>    
    </ul>
  </nav>  
  <h1 align="center">工夫FACTORY</h1>
  <nav id="menuber">
    <ul class="menu_text">
      <li><%= link_to "トップ", root_path %></li>
      <li><%= link_to "サイトについて", mainnnote_about_path %></li>
      <li><%= link_to "新規工夫投稿", new_mainnote_path %></li>   
      <li><%= link_to "工夫職人一覧", mainnnote_usershow_path %></li>
    </ul>
  </nav>
  <div class="title">
    <h2 class="page_title">パスワード変更</h2>
  </div>
  <div class="main_border">
    <div class="form_background">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="login_form_area">
          <p class="label_width"><strong><%= f.label :"メールアドレス" %></strong></p>
          <%boolen_email = ""%>
          <% resource.errors.full_messages_for(:email).each do |message| %>
            <%boolen_email = "false"%>
          <% end %>
          <div>
            <%if boolen_email == "false"%>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "error_form" %>
              <% resource.errors.full_messages_for(:email).each do |message| %>
                <p class="error_massege_text"><strong><%= message %></strong></p>
              <% end %>
            <%else%>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form_size", placeholder:"メールアドレス" %>
            <% end %>
          </div>  
        </div>  
        
        <div class="button_margin">
          <%= f.submit value:"変更メールを送付",class:"main_button"%>
        </div>
      <% end %>
    </div>
  </div>
</div>